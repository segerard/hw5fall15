-#  This file is app/views/movies/searchtmdb.html.haml
%h1 The following movies containing '#{@search_terms}' were found on TMDb
= form_tag :action=>:add_tmdb do
  %table#movies
    %thead
      %tr
        %th Movie Title
        %th Rating
        %th Release Date
        %th Select
    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie[:title]
          %td= movie[:rating]
          %td= movie[:release_date]
          %td= check_box_tag "tmdb_movies[#{movie[:tmdb_id]}]"

  = submit_tag 'Add Selected Movies'

= link_to 'Return to Movie List', movies_path
